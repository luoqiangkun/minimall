page {
  height: 100%;
}
.cu-bar {
	display: flex;
	position: relative;
  align-items: center;
  justify-content: center;
  background-color: var(--pink);
}

.cu-bar.fixed {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 1024;
}
.cu-bar .back {
  position: absolute;
  left: 0;
}
.cu-bar .title {
  color: #fff;
  font-size: 35rpx;
  font-weight: 600;
}
page .container {
  padding: 20rpx 20rpx;
  color: #666;
  background: var(--gradualPink);
}
.container .card {
  border-radius: 15rpx;
  background-color: #ffffff;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.tab-nav {
  display: flex;
}
.tab-nav view {
  flex-grow: 1;
  text-align: center;
  background: #facccf;
  height: 70rpx;
  line-height: 70rpx;
}
.tab-nav .active {
  background-color: #fff;
}
.tab-panel {
  display: none;
}
.tab-panel.active {
  display: block;
}

.address-box {
  border-bottom: 1px solid #ebedf0;
  padding: 20rpx 0;
}
.address-item {
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.address-item .address-content>view:first-child {
  margin-bottom: 10rpx;
}
.address-item .default {
  color: #ffffff;
  background-color: var(--pink);
  border-radius: 10rpx;
  padding: 5rpx 20rpx;
  margin-right: 10rpx;
  font-size: 25rpx;
}
.address-item .address-detail {
  font-size: 35rpx;
  font-weight: 600;
}
.address-item .user-name {
  margin-right: 50rpx ;
}
.address-item.address-empty {
  line-height: 75rpx;
  text-align: center;
}
.address-box .location {
  padding: 20rpx;
  font-size: 35rpx;
  font-weight: 600;
}
.coupon-box {
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #ebedf0;
  background-color: #fff;
}

.coupon-box .coupon-item {
  width: 100%;
  overflow: hidden;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.coupon-box .l {
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
  margin-right: 20rpx;
}

.message-box {
  padding: 30rpx 20rpx;
  background-color: #fff;
}


.order-box {
  background: #fff;
  border-bottom: 1px solid #ebedf0;
}

.order-box .order-item {
  padding: 30rpx 20rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ebedf0;
}

.order-box .order-item.no-border {
  border-bottom: none;
}

.goods-items {
  margin-top: 20rpx;
  padding: 0 20rpx;
  background: #fff;
  border-bottom: 1px solid #ebedf0;
}

.goods-items .item {
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ebedf0;
}

.goods-items .item.no-border {
  border-bottom: none;
}

.goods-items .item:last-child {
  border-bottom: none;
}

.goods-items .img {
  height: 150rpx;
  width: 150rpx;
  margin-right: 20rpx;
}

.goods-items .img image {
  height: 100%;
  width: 100%;
}

.goods-items .info {
  flex: 1;
  position: relative;
}

.goods-items .t {
  margin-bottom: 15rpx;
}

.goods-items .t .name {
  display: block;
}

.goods-items .t .number {
  position: absolute;
  top: 0;
  right: 0;
}

.goods-items .m {
  margin-bottom: 15rpx;
}

.goods-items .b {
  color: #333;
}
.placeholder {
  width: 100%;
  height: 80rpx;
}
.order-total {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 120rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  z-index: 99999;
  padding: 0 20rpx;
  border-top: 1px solid #ebedf0;
}

.order-total .l {
  line-height: 120rpx;
  color: var(--pink);
  font-size: 35rpx;
}

.order-total .r {
  height: 80rpx;
  width: 30%;
  text-align: center;
  line-height: 80rpx;
  background-color: var(--pink);
  color: #ffffff;
  border-radius: 80rpx;
  font-weight: 600;
}
.van-cell{
  padding: 15rpx 20rpx !important;
}
.van-cell::before {
  display: none;
}
.van-cell::after {
  display: none;
}