
page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}
.container {
  background: #f4f4f4;
  height: auto;
  overflow: hidden;
  width: 100%;
}

.cu-bar {
	display: flex;
	position: relative;
  align-items: center;
  justify-content: center;
  background-color: var(--pink);
}

.cu-bar.fixed {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 1024;
}
.cu-bar .back {
  position: absolute;
  left: 0;
}
.cu-bar .title {
  color: #fff;
  font-size: 35rpx;
  font-weight: 600;
}
.profile {
  height: 250rpx;
  background: var(--pink);
  padding: 0 20rpx;
  color: #f4f4f4;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  font-size: 28rpx;
  text-align: center;
  padding-bottom: 50rpx;
}
.profile-info {
  color: #fff;
  display: flex;
  align-items: center;
}

.profile-info .avatar {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.profile-info .avatar image {
  width: 100%;
  height: 100%;
}

.profile-info .info text, 
.profile-info .login text {
  color: #fff;
  font-size: 35rpx;
  font-weight: 600;
}
.profile-setting {
  color: #fff;
  padding: 10rpx 20rpx;
  border: 1px solid #fff;
  border-radius: 40rpx;
}
.card {
  background: #fff;
  border-radius: 25rpx;
  margin: 20rpx 20rpx;
}
.card .card-header {
  padding: 20rpx 0 0 20rpx;
  font-weight: 600;
}
.card .grid {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.card .cell {
  flex-grow: 1;
  text-align: center;
  padding: 40rpx 0;
}
.card .cell iconfont>view {
  margin: 0 auto;
}
.menu {
  padding: 0 20rpx;
  background-color: #fff;
}
.menu:last-child {
  margin-top: 20rpx;
}
.menu .menu-list {

}
.menu .menu-list .menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
}
.menu .menu-list .menu-item:last-child {
  border-bottom: 0;
}
.menu-item .title {
  display: flex;
  align-items: center;
}
.menu-item .title .icon {
  width: 40rpx;
  height: 40rpx;
  flex-grow: 1;
  flex-shrink: 1;
}
.menu-item .title .icon image {
  width: 100%;
  height: 100%;
}
.menu-item .title text{
  margin-left: 10rpx;
}
.kf_button {
  background: #fff;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  margin: 0;
  border-color: #fff;
}
.kf_button::after {
  border: 0;
}
.kf_button vant-icon {
  font-size: 30rpx;
}